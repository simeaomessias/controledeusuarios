
<div class="d-flex flex-column rounded login-container">

    <div class="container-fluid d-flex flex-column rounded-top text-center login-div-titulo">
        <span>Login</span>
    </div>

    <form action="/" method="post" id="formLogin" autocomplete="off"
    class="container-fluid px-0 d-flex flex-column rounded">

        <div class="d-flex flex-column px-2 mt-2">
            <label for="email"><b>Email</b></label>
            <input type="email" name="email" id="input-email" class="rounded px-2 py-1 login-input" autofocus autocomplete="off" value="{{email}}">
        </div>

        <div class="d-flex flex-column px-2 mt-2">
            <label for="senha"><b>Senha</b></label>
            <input type="password" name="senha" id="input-senha" class="rounded px-2 py-1 login-input" autocomplete="off" value="{{senha}}">
            <span class="erro-validacao text-center mt-2">{{erro}}</span>
        </div>

        <div class="d-flex flex-column px-2 mt-3">
            <input type="submit" id="input-submit" class="py-1 rounded login-botao" value="Acessar" >
        </div>

        <div class="d-flex flex-row justify-content-between px-2 mt-3 mb-3">
            <a href="recuperar-senha">Recuperar senha</a>
            <a href="/criar-conta">Criar conta</a>
        </div>

    </form>

</div>


